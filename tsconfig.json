{
  "include": ["src"],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "esnext", "WebWorker"],
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "*": ["src/*", "node_modules/*"],      
    },
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "target": "ES6"
  }
}
